<%= form_with(model: product, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-100 font-semibold mb-2" %>
    <%= form.text_field :name, class: "w-full p-2 rounded bg-gray-700 text-gray-100" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-100 font-semibold mb-2" %>
    <%= form.text_area :description, class: "w-full p-2 rounded bg-gray-700 text-gray-100", rows: 5 %>
  </div>

  <div class="mb-4">
    <%= form.label :price, class: "block text-gray-100 font-semibold mb-2" %>
    <%= form.number_field :price, class: "w-full p-2 rounded bg-gray-700 text-gray-100", step: 0.01 %>
  </div>

  <div>
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
<%# app/views/products/index.html.erb %>

<% content_for :title, "Products" %>

<% if notice %>
  <p class="bg-green-100 text-green-800 p-2 rounded mb-4"><%= notice %></p>
<% end %>

<h1 class="text-3xl font-bold mb-6">Products</h1>

<div id="products" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @products.each do |product| %>
    <div class="border rounded-lg p-4 shadow hover:shadow-lg transition duration-200">
      <%= render product %>
      <p class="mt-2">
        <%= link_to "Show", product, class: "text-blue-600 hover:text-blue-800 font-medium" %>
        <% if user_signed_in? && product.user == current_user %>
          <%= link_to "Edit", edit_product_path(product), class: "text-yellow-600 hover:text-yellow-800 font-medium" %>
          <%= link_to "Delete", product, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 font-medium" %>
        <% end %>
      </p>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= link_to "New product", new_product_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-medium" %>
</div>